// Cineon Linear Signal Split Over 1.0 and Normalised (Reversed)

__DEVICE__ float3 transform(int p_Width, int p_Height, int p_X, int p_Y, float p_R, float p_G, float p_B)
{
    const float r = p_R * 12.5216945686f;
    
    const float g = p_G * 12.5216945686f;
    
    const float b = p_B * 12.5216945686f;

    return make_float3(r, g, b);
}
