// Cineon Linear Ramp

__DEVICE__ float3 transform(int p_Width, int p_Height, int p_X, int p_Y, float p_R, float p_G, float p_B)
{
    const float r = ((p_X / 1919.0f) * (0.0056508194 + 13.5216945686)) - 0.0056508194;

    const float g = ((p_X / 1919.0f) * (0.0056508194 + 13.5216945686)) - 0.0056508194;

    const float b = ((p_X / 1919.0f) * (0.0056508194 + 13.5216945686)) - 0.0056508194;

    return make_float3(r, g, b);
}
